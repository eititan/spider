{
    "name": "php/spider",
    "description": "Web crawler in php",
    "license": "MIT",
    "authors": [
        {
            "name": "John Hutchins"
        }
    ],
    "autoload": {
        "psr-4":{
            "App\\": "src/",
            "App\\Tests\\": "tests/",
            "App\\Crawl\\": "crawl/"
        }
    },
    "require": {
        "php": ">=7.0",
        "guzzlehttp/guzzle": "~6.0",
        "psr/log": "~1.0",
        "slim/slim": "^3.0",
        "slim/php-view": "2.2.0",
        "monolog/monolog": "^1.23",
        "illuminate/database": "~5.1",
        "akrabat/ip-address-middleware": "^1.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^7",
        "phpunit/php-invoker": "^2.0",
        "squizlabs/php_codesniffer": "^3.1",
        "fzaninotto/faker": "^1.7"
    },
    "scripts": {
        "clean": [
            "rm -f composer.lock",
            "rm -f junit.xml",
            "rm -f logs/*",
            "rm -fr vendor/"
        ],
        "fix": "vendor/bin/phpcbf --standard=PSR2 --extensions=php controllers models routes src tests",
        "push": [
            "git add .",
            "git commit -m 'Updated assignment'",
            "git push origin"
        ],
        "start": "php -S localhost:8080 -t public",
        "sniff": "vendor/bin/phpcs --standard=PSR2 --extensions=php src tests",
        "test": [
            "vendor/bin/phpunit"
        ]
    }
}
